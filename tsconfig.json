{
  "compilerOptions": {
    "lib": ["ES2017", "dom"],
    "target": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["vite/client", "vite-plugin-svgr/client", "@types/chrome"]
  },
  "exclude": ["node_modules", "dist"]
}
